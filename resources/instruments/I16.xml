<instrument>
	<name>D10</name>
    <detector type="flat">
        <name>Pilatus 10k</name>
        <sample_distance units="mm">488.0</sample_distance>
        <width units="mm">64.0</width>
        <height units="mm">64.0</height>
        <nrows>195</nrows>
        <ncols>487</ncols>
        <goniometer>
        	<name>delta-arm</name>
	        <axis type="rotation">
	            <name>delta</name>
	            <direction>
			        <x>1.000</x>
			        <y>0.000</y>
			        <z>0.000</z>
	            </direction>
	            <clockwise>false</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	        <axis type="rotation">
	            <name>gamma</name>
	            <direction>
			        <x>0.000</x>
			        <y>0.000</y>
			        <z>1.000</z>
	            </direction>
	            <clockwise>false</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	    </goniometer>
        <position>
	        <x>0.000</x>
	        <y>0.000</y>
	        <z>0.000</z>
        </position>	    
        <row_min>0</row_min>
        <col_min>0</col_min>
        <data_ordering>by_column</data_ordering>
    </detector>
    <sample>
        <name>sample</name>
        <goniometer>        
        	<name>Kappa goniometer</name>
	        <axis type="rotation">
	            <name>phi</name>
	            <direction>
			        <x>1.000</x>
			        <y>0.000</y>
			        <z>0.000</z>
	            </direction>
	            <clockwise>false</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	        <axis type="rotation">
	            <name>chi</name>
	            <direction>
			        <x>0.000</x>
			        <y>1.000</y>
			        <z>0.000</z>
	            </direction>
	            <clockwise>false</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	        <axis type="rotation">
	            <name>eta</name>
	            <direction>
			        <x>1.000</x>
			        <y>0.000</y>
			        <z>0.000</z>
	            </direction>
	            <clockwise>false</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	        <axis type="rotation">
	            <name>mu</name>
	            <direction>
			        <x>0.000</x>
			        <y>0.000</y>
			        <z>1.000</z>
	            </direction>
	            <clockwise>false</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	    </goniometer>
        <position>
	        <x>0.000</x>
	        <y>0.000</y>
	        <z>0.000</z>
        </position>
    </sample>
    <source>
    	<name>monochromatic source</name>
    </source>
</instrument>
