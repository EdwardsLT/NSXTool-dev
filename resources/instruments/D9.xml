<instrument>
	<name>D9</name>
    <detector type="flat">
        <name>banana</name>
        <sample_distance units="mm">488.0</sample_distance>
        <width units="mm">64.0</width>
        <height units="mm">64.0</height>
        <nrows>32</nrows>
        <ncols>32</ncols>
        <goniometer>
        	<name>gamma-arm</name>
	        <axis type="rotation">
	            <name>2theta(gamma)</name>
	            <direction>
			        <x>0.000</x>
			        <y>0.000</y>
			        <z>1.000</z>
	            </direction>
	            <clockwise>true</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	        <axis type="translation">
	            <name>y-offset</name>
	            <direction>
			        <x>0.000</x>
			        <y>1.000</y>
			        <z>0.000</z>
	            </direction>
	            <offset>0.0</offset>
	            <physical>false</physical>
	        </axis>
	    </goniometer>
        <position>
	        <x>0.000</x>
	        <y>0.000</y>
	        <z>0.000</z>
        </position>	    
        <row_min>0</row_min>
        <col_min>0</col_min>
        <data_ordering>by_column</data_ordering>
    </detector>
    <sample>
        <name>sample</name>
        <goniometer>        
        	<name>Euler cradle (BL)</name>
	        <axis type="rotation">
	            <name>omega</name>
	            <direction>
			        <x>0.000</x>
			        <y>0.000</y>
			        <z>1.000</z>
	            </direction>
	            <clockwise>true</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	        <axis type="rotation">
	            <name>chi</name>
	            <direction>
			        <x>0.000</x>
			        <y>1.000</y>
			        <z>0.000</z>
	            </direction>
	            <clockwise>false</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	        <axis type="rotation">
	            <name>phi</name>
	            <direction>
			        <x>0.000</x>
			        <y>0.000</y>
			        <z>1.000</z>
	            </direction>
	            <clockwise>true</clockwise>
	            <offset>0.0</offset>
	            <physical>true</physical>
	        </axis>
	        <axis type="translation">
	            <name>x-offset</name>
	            <direction>
			        <x>1.000</x>
			        <y>0.000</y>
			        <z>0.000</z>
	            </direction>
	            <offset>0.0</offset>
	            <physical>false</physical>
	        </axis>
	        <axis type="translation">
	            <name>y-offset</name>
	            <direction>
			        <x>0.000</x>
			        <y>1.000</y>
			        <z>0.000</z>
	            </direction>
	            <offset>0.0</offset>
	            <physical>false</physical>
	        </axis>
	        <axis type="translation">
	            <name>z-offset</name>
	            <direction>
			        <x>0.000</x>
			        <y>0.000</y>
			        <z>1.000</z>
	            </direction>
	            <offset>0.0</offset>
	            <physical>false</physical>
	        </axis>
	    </goniometer>
        <position>
	        <x>0.000</x>
	        <y>0.000</y>
	        <z>0.000</z>
        </position>
    </sample>
    <source>
    	<name>monochromatic source</name>
    </source>
</instrument>
